    <phpunit>
        <suite>
            <modules>
                 <Magentron_EmailImages />
            </modules>
        </suite>
    </phpunit>
    
    <default>
        <system>
            <emailimages>
                <enable>0</enable>
                <cache_time>86400</cache_time>
                <regexp><![CDATA[/((<[iI][mM][gG] [^>]*[sS][rR][cC]|[Bb][Aa][Cc][Kk][Gg][Rr][Oo][Uu][Nn][Dd])="|image:url\('?)([^'"\)]*)(["'\)])/]]></regexp>
                <regexp_index>3</regexp_index>
            </emailimages>
        </system>
    </default>
