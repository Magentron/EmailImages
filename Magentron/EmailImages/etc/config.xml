        <helpers>
            <emailimages>
                <class>Magentron_EmailImages_Helper</class>
            </emailimages>
        </helpers>
        <cache>
            <types>
                <emailimages>
                    <label>Email Images Cache</label>
                    <description>Images that were automatically attached to emails by extension EmailImages.</description>
                    <tags>MAGENTRON_EMAILIMAGES</tags>
                </emailimages>
            </types>
        </cache>
